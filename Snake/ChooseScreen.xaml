<Window x:Class="Snake.ChooseScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake Game" Height="600" Width="518"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen"
        >
    <Grid Background="LightBlue" Margin="10,10,0,10">
        
        <!-- Header -->
        <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="50" Click="BackButton_Click" />

        <StackPanel HorizontalAlignment="Left" Width="508">
            <Grid HorizontalAlignment="Center" Margin="0,67,0,0" Width="360" Height="72">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Name="ClassicButton"  Width="60" Height="60" Grid.Column="0" Click="Button_Click" Tag="GameMode,Classic">Classic</Button>
                <Button Width="60" Height="60" Grid.Column="1" Click="Button_Click" Tag="GameMode,Wall">Wall</Button>
                <Button Width="60" Height="60" Grid.Column="2" Click="Button_Click" Tag="GameMode,Reverse">Reverse</Button>
                <Button Width="60" Height="60" Grid.Column="3" Click="Button_Click" Tag="GameMode,Box">Box</Button>
                <Button Width="60" Height="60" Grid.Column="4" Click="Button_Click" Tag="GameMode,Direction">Direction</Button>
                <Button Width="60" Height="60" Grid.Column="5" Click="Button_Click" Tag="GameMode,Random">Random</Button>
            </Grid>

            <Grid HorizontalAlignment="Center" Margin="0,67,0,0" Width="180" Height="72">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Name="MediumSpeedButton"  Width="60" Height="60" Grid.Column="0" Click="Button_Click" Tag="GameSpeed,Medium">Medium</Button>
                <Button Width="60" Height="60" Grid.Column="1" Click="Button_Click" Tag="GameSpeed,Slow">Slow</Button>
                <Button Width="60" Height="60" Grid.Column="2" Click="Button_Click" Tag="GameSpeed,Fast">Fast</Button>
            </Grid>

            <Grid HorizontalAlignment="Center" Margin="0,67,0,0" Width="180" Height="72">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Name="MediumSizeButton"  Width="60" Height="60" Grid.Column="0" Click="Button_Click" Tag="GameSize,Medium">Medium</Button>
                <Button Width="60" Height="60" Grid.Column="1" Click="Button_Click" Tag="GameSize,Small">Small</Button>
                <Button Width="60" Height="60" Grid.Column="2" Click="Button_Click" Tag="GameSize,Large">Large</Button>
            </Grid>

        </StackPanel>





        <!-- Bottom Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="106,0,0,10" Grid.ColumnSpan="2">
            <Button Content="Play" Width="100" Margin="5" Click="PlayButton_Click" />
            <Button Content="Shuffle" Width="100" Margin="5" Click="ShuffleButton_Click" />
            <Button Content="Reset" Width="100" Margin="5" Click="ResetButton_Click" />
        </StackPanel>
    </Grid>
</Window>
