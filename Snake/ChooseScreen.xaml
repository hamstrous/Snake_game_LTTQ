<Window x:Class="Snake.ChooseScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake Game" Height="600" Width="400">

    <Grid Background="LightBlue" Margin="10">
        <!-- Header -->
        <Button Content="←" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="50" Click="BackButton_Click" />

        <!-- Main Selection Area -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10,50,10,100">
            <StackPanel>
                <!-- Row Template -->
                <StackPanel Orientation="Horizontal" Margin="5">
                    <ItemsControl ItemsSource="{Binding Row1Items}" Margin="5">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1" Columns="10" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding}" Width="40" Height="40" Command="{Binding SelectCommand}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Repeat rows dynamically -->
                <!-- Add more StackPanels for additional rows -->
                <Label Content="1"/>
                <Label Content="1"/>
                <Label Content="1"/>
                <Label Content="1"/>
                <Label Content="1"/>
                <Label Content="1"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Play" Width="100" Margin="5" Click="PlayButton_Click" />
            <Button Content="Shuffle" Width="100" Margin="5" Click="ShuffleButton_Click" />
            <Button Content="Reset" Width="100" Margin="5" Click="ResetButton_Click" />
        </StackPanel>
    </Grid>
</Window>
