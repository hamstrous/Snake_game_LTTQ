<Window x:Class="Snake.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="MainMenu" Height="500" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Assets/MainMenuBackground.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <UniformGrid HorizontalAlignment="Center" VerticalAlignment="Center" Columns="1">
            <Button  Width="100" Height="50" Content="Play" Margin="10,10" Click="StartGame_Click" />
            <Button  Width="100" Height="50" Content="Setting" Margin="10,10"/>
            <Button  Width="100" Height="50" Content="Leader Board" Margin="10,10"/>
            <Button  Width="100" Height="50" Content="Exit" Margin="10,10" Click="ExitGame_Click"/>
        </UniformGrid>
    </Grid>
</Window>